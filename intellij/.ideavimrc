let mapleader=" "

set relativenumber
set rnu
set scrolloff=8
set incsearch
set smartindent
set wrap!
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set undofile
"" Editing
set ideajoin
set clipboard=unnamedplus
vmap J <Action>(MoveLineDown)
vmap K <Action>(MoveLineUp)
"" IDE Remaps
nmap <leader>gc <Action>(Generate)
nmap <leader>f <Action>(ReformatCode)
nmap <leader>s <Action>(Switcher)
map <leader>x <Action>(EvaluateExpression)
nmap <leader>b <Action>(ToggleLineBreakpoint)
nmap <leader>ca <Action>(ShowIntentionActions)
nmap <leader>rf <Action>(Refactorings.QuickListPopupAction)
vmap <leader>rf <Action>(Refactorings.QuickListPopupAction)
"" Code Navigation
nmap ]d <Action>(GotoNextError)
nmap [d <Action>(GotoPreviousError)
nmap gh <Action>(ShowErrorDescription)
nmap q <Action>(CloseEditor)
nmap gi <Action>(GotoImplementation)
" Don't use Ex mode, use Q for formatting.
map mc <A-n>
map mx <A-x>
map mp <A-p>

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
"map \r <Action>(ReformatCode)

set clipboard+=ideaput
" Register remaps
" vnoremap <leader>p "_dP
" nnoremap <leader>y "+y
" vnoremap <leader>y "+y
" nnoremap <leader>Y "+Y
" vnoremap <leader>Y "+Y
" nnoremap <leader>d "_d
" vnoremap <leader>d "_d
